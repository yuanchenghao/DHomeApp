<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="vericationCodeInput">

        <attr name="box" format="integer" />
        <attr name="child_h_padding" format="dimension" />
        <attr name="child_v_padding" format="dimension" />
        <attr name="child_width" format="dimension" />
        <attr name="child_height" format="dimension" />
        <attr name="padding" format="dimension" />
        <attr name="box_bg_focus" format="reference" />
        <attr name="box_bg_normal" format="reference" />
        <attr name="inputType" format="string" />
    </declare-styleable>

    <!--自定义刷新头属性-->
    <declare-styleable name="CustomRefresh1">
        <attr name="ptr_rotate_ani_time" format="integer" />
    </declare-styleable>

    <declare-styleable name="VerificationCodeView">
        <attr name="icv_et_number" format="integer" />
        <attr name="icv_et_width" format="dimension|reference" />
<!--        <attr name="icv_et_divider_drawable" format="reference" />-->
        <attr name="icv_et_text_color" format="color|reference" />
        <attr name="icv_et_text_size" format="dimension|reference" />
        <attr name="icv_et_bg_focus" format="reference" />
        <attr name="icv_et_bg_normal" format="reference" />
        <attr name="icv_et_pwd" format="boolean" />
        <attr name="icv_et_pwd_radius" format="dimension|reference" />
    </declare-styleable>

    <!-- 自定义ImageView 固定宽高比 -->
    <declare-styleable name="RatioImageView">
        <!--比例-->
        <attr name="ratio" format="float" />
    </declare-styleable>

    <!-- 自定义流式布局 -->
    <declare-styleable name="FlowLayout">
        <attr name="horizontalSpacing" format="dimension" />
        <attr name="verticalSpacing" format="dimension" />
    </declare-styleable>


    <!--自定义通用顶部操作栏-->
    <declare-styleable name="DdleTopBar">
        <attr name="layout_height" format="dimension" />
        <attr name="left_img_src" format="reference" />
        <attr name="right_img_src" format="reference" />
        <attr name="right_img_src2" format="reference" />
        <attr name="left_img_background" format="reference" />
        <attr name="right_img_backgroud" format="reference" />
        <attr name="right_img_backgroud2" format="reference" />
        <attr name="left_img_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="right_img_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="right_img_visibility2" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="left_text" format="string|reference" />
        <attr name="right_text" format="string|reference" />
        <attr name="center_text" format="string|reference" />
        <attr name="left_text_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="right_text_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="center_text_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="bottom_line_visibility" format="enum">
            <enum name="GONE" value="0x00000008" />
            <enum name="INVISIBLE" value="0x00000004" />
            <enum name="VISIBLE" value="0x00000000" />
        </attr>
        <attr name="background_color" format="reference|color" />
        <attr name="center_text_color" format="reference|color" />
        <attr name="left_text_color" format="reference|color" />
        <attr name="right_text_color" format="reference|color" />

    </declare-styleable>
    <declare-styleable name="VerificationCodeInputView">
        <!--输入框的数量-->
        <attr name="vciv_et_number" format="integer" />
        <!--输入类型-->
        <attr name="vciv_et_inputType">
            <enum name="number" value="0" />
            <enum name="numberPassword" value="1" />
            <enum name="text" value="2" />
            <enum name="textPassword" value="3" />
        </attr>
        <!--输入框的宽度-->
        <attr name="vciv_et_width" format="dimension" />
        <!--输入框的高度-->
        <attr name="vciv_et_height" format="dimension" />
        <!--输入框文字颜色-->
        <attr name="vciv_et_text_color" format="color" />
        <!--输入框文字大小-->
        <attr name="vciv_et_text_size" format="dimension" />
        <!--输入框间距，不输入则代表平分-->
        <attr name="vciv_et_spacing" format="dimension" />
        <!--输入框背景色-->
        <attr name="vciv_et_background" format="reference|color" />
        <!--输入框焦点背景色-->
        <attr name="vciv_et_foucs_background" format="reference|color" />
        <!--输入框焦点宽度-->
        <attr name="vciv_et_cursor_width" format="dimension" />
        <!--输入框焦点高度-->
        <attr name="vciv_et_cursor_height" format="dimension" />
        <!--输入框焦点颜色-->
        <attr name="vciv_et_cursor_color" format="color" />
        <!--输入框下划线高度-->
        <attr name="vciv_et_underline_height" format="dimension" />
        <!--输入框无焦点的下划线颜色-->
        <attr name="vciv_et_underline_default_color" format="color" />
        <!--输入框有焦点的下划线颜色-->
        <attr name="vciv_et_underline_focus_color" format="color" />
        <!--输入框下划线是否展示-->
        <attr name="vciv_et_underline_show" format="boolean" />
    </declare-styleable>
</resources>