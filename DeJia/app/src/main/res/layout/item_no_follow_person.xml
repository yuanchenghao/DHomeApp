<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_1"
    android:layout_marginTop="@dimen/dp_1"
    android:layout_marginRight="@dimen/dp_8"
    android:background="@drawable/shape_ffffff_button_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_pic"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="35.5dp"
        android:layout_marginTop="12.5dp"
        android:layout_marginRight="35.5dp"
        app:fadeDuration="100"
        app:retryImageScaleType="centerCrop"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_name"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1C2125"
        android:layout_marginTop="@dimen/dp_8"
        android:textStyle="bold"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_tag"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:lines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#919699"
        android:layout_marginTop="@dimen/dp_2"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ebf6ff_button_2"
        android:text="关注"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="#33A7FF"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_14" />
</LinearLayout>
