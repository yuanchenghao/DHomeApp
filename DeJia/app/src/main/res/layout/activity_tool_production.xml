<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"
                android:textSize="@dimen/sp_16"
                android:textColor="#1C2125"
                android:text="取消" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发表"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:textColor="#33A7FF"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_24_ffffff">

        <EditText
            android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:textColor="#1C2125"
            android:background="@null"
            android:textSize="@dimen/sp_18"
            android:textColorHint="#919699"
            android:textStyle="bold"
            android:singleLine="true"
            android:hint="起个吸引人的标题吧" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/shape_24_ffffff">

        <EditText
            android:id="@+id/ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#1C2125"
            android:background="@null"
            android:textSize="@dimen/sp_16"
            android:gravity="top"
            android:textColorHint="#919699"
            android:textStyle="bold"
            android:hint="正文" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_37" />

    <LinearLayout
        android:id="@+id/ll_house"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/shape_f5f6f7_button_22"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:src="@mipmap/about_house" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#1C2125"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="提及楼盘、小区" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_8"
            android:src="@mipmap/right_black" />
    </LinearLayout>
</LinearLayout>
