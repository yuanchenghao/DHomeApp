<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/one_click_login_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="72.5dp"
        android:text="请输入验证码"
        android:textColor="#1C2125"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/dp_12"
        android:text="已发送4位验证码至"
        android:textColor="#919699"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.dejia.anju.view.VerificationCodeInput
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:box="4"
            app:inputType="number"
            app:child_width="56dp"
            app:child_height="56dp"
            app:box_bg_normal="@drawable/verification_edit_bg_normal"
            app:box_bg_focus="@drawable/verification_edit_bg_focus"
            app:child_h_padding="5dp"
            android:layout_centerInParent="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_20"
        android:text="确定"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/shape_24_d5edfe"/>

    <TextView
        android:id="@+id/tv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_24"
        android:textColor="#0095FF"
        android:textSize="12sp"
        android:text="点此重新获取验证码" />
</LinearLayout>

