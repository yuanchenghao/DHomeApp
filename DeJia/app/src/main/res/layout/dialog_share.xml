<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_share"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_friend"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/dp_32"
                android:src="@mipmap/weixin1"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="#1C2125"
                android:text="转发给微信好友" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_circle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/dp_32"
                android:src="@mipmap/weixin2"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:textColor="#1C2125"
                android:text="转发到朋友圈" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_11"
            android:background="#E7EDF2" />

        <TextView
            android:id="@+id/ll_button_dismiss2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="取消"
            android:textColor="#1C2125"
            android:textSize="16sp" />
    </LinearLayout>

</FrameLayout>