<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_gravity="right"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/dp_15"
        android:src="@mipmap/one_click_login_close" />

    <LinearLayout
        android:id="@+id/ver"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_height="@dimen/dp_19"
            android:src="@mipmap/banben" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="当前版本"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="16sp"
            android:textColor="#1C2125" />
        <TextView
        android:id="@+id/tv_banben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="12sp"
            android:textColor="#919699" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_clean"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_height="@dimen/dp_19"
            android:src="@mipmap/clean" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="清理缓存"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="16sp"
            android:textColor="#1C2125" />
        <TextView
            android:id="@+id/tv_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_27"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="12sp"
            android:textColor="#919699" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_about"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_height="@dimen/dp_19"
            android:src="@mipmap/about" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="关于得家"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="16sp"
            android:textColor="#1C2125" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_ys"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_height="@dimen/dp_19"
            android:src="@mipmap/ys" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="隐私协议"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="16sp"
            android:textColor="#1C2125" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_kill"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_19"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_height="@dimen/dp_19"
            android:src="@mipmap/kill" />
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号注销"
            android:layout_marginLeft="@dimen/dp_14"
            android:textSize="16sp"
            android:textColor="#1C2125" />

    </LinearLayout>
</LinearLayout>
