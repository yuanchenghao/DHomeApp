<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuemei.dejia">
    //网络
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    //手机识别码
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.yuemei.dejia.DeJiaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--启动页-->
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--主页面-->
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.OneClickLoginActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.SendVerificationCodeActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.VerificationCodeActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.QRCodeActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>